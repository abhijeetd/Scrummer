@{
    ViewBag.Title = "Projects";
}
<div ng-controller="ProjectCtrl">
    <div class="row">
        <div class="col-md-2">
            <h3>
                <a href="#/project/add" class="btn btn-primary btn-sm pull-right" title="Add project"><i class="glyphicon glyphicon-plus"></i></a>
                Projects
            </h3>
            <div class="input-group">
                <input type="text" ng-model="vm.selectedProject" class="form-control input-sm" placeholder="project title" />
                <span class="input-group-btn">
                    <button class="btn btn-default btn-sm" ng-click="vm.clearProjectTitle()"><i class="glyphicon glyphicon-remove"></i></button>
                    <button type="button" class="btn btn-sm btn-success" ng-click="vm.load()"><i class=" glyphicon glyphicon-search"></i></button>
                </span>
            </div>
            <ul class="nav">
                <li ng-repeat="line in vm.list" style="background-color:#f5f5f5;margin-top:5px;">
                    <a href="#/project/{{line.code}}">{{line.title}}</a>
                </li>
            </ul>
        </div>
        <div class="col-md-10">
            <br />
            
            <div ng-show="vm.isDetailsVisible">
                <hr />

                <div class="row">
                    <div class="col-md-7">
                        @Html.Partial("SprintList")
                        <br />

                        @*@Html.Partial("Missions")*@
                    </div>
                    <div class="col-md-4 col-md-offset-1">
                        @Html.Partial("TeamMemberList")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <br />
            <div ui-view></div>
            
        </div>
    </div>
</div>

