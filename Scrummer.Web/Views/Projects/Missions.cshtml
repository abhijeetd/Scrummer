<div ng-controller="MissionCtrl">
    <h4>Missions <a href="#" class="btn btn-default btn-sm" title="Add mission" ng-click="vm.addNew()"><i class="glyphicon glyphicon-plus"></i></a></h4>
    <hr />
    <div ng-show="vm.isEditorVisible" class="well well-sm">
        <div class="input-group">
            <input type="text" ng-model="vm.newObject.title" placeholder="mission title" class="form-control input-sm" />
            <span class="input-group-btn">
                <button class="btn btn-info btn-sm" ng-click="vm.add()"><i class="glyphicon glyphicon-plus"></i></button>
            </span>
        </div>
    </div>
    <ul class="list-group">
        <li ng-repeat="line in vm.list" class="list-group-item">
            <span class="badge">{{line.points}}</span>
            <a href="#"><i class="glyphicon glyphicon-pencil" ng-click="vm.editRecord($index)"></i></a>
            {{line.title}}
        </li>
    </ul>
    @Html.Partial("MissionEditor")
</div>
