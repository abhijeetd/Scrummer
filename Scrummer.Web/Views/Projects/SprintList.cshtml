<div ng-controller="SprintCtrl">
    <h4>
        Sprints
        <a href="#" class="btn btn-default btn-sm" title="Add sprint" ng-click="vm.addNew()"><i class="glyphicon glyphicon-plus"></i></a>
    </h4>
    <div ng-show="vm.isEditorVisible" class="well well-sm">
        <div class="input-group">
            <input type="text" ng-model="vm.newObject.title" placeholder="Sprint path" class="form-control input-sm" />
            <span class="input-group-btn">
                <button class="btn btn-info btn-sm" ng-click="vm.add()"><i class="glyphicon glyphicon-plus"></i></button>
            </span>
        </div>
    </div>

    <ul class="list-group">
        <li ng-repeat="line in vm.list" class="list-group-item">
            <a href="/projects/pbis/{{line._id}}"> {{line.title}}</a>
            &nbsp;<a href="#" ng-click="vm.editRecord($index)"><i class="glyphicon glyphicon-pencil"></i></a>
            &nbsp;<a href="#" ng-click="vm.delete($index, line)"><i class="glyphicon glyphicon-remove"></i></a>
        </li>
    </ul>
</div>


