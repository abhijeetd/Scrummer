@{
    ViewBag.Title = "Sprints";
}
<div ng-controller="PBICtrl">
    <input type="hidden" id="currentSprint" ng-model="vm.currentSprint" />

    <h3><i class="glyphicon glyphicon-user"></i> Product backlog items</h3>
    <div class="row">
        <div class="col-md-1"><h4>US#</h4></div>
        <div class="col-md-9"><h4>Title</h4></div>
        <div class="col-md-2"><h4>Status</h4></div>
    </div>
    <div class="well well-sm" style="padding:2px 0;margin-bottom:5px;">
        <div class="row">
            <div class="col-md-10">
                <select ng-model="vm.selectedSprint" class="form-control input-sm">
                    <option ng-repeat="p in vm.sprints" value="{{p.title}}">{{p.title}}</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-sm btn-success" ng-click="vm.load()"><i class=" glyphicon glyphicon-search"></i></button>
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-sm btn-default" ng-click="vm.syncStories()"><i class=" glyphicon glyphicon-refresh"></i> PBI</button>
            </div>
        </div>
    </div>

    <div ng-repeat="line in vm.list">
        <div class="row">
            <div class="col-md-1">{{line.workitem}}</div>
            <div class="col-md-9">{{line.title}}</div>
            <div class="col-md-2">{{line.lastname}}</div>
            <div class="col-md-3">{{line.email}}</div>
            <div class="col-md-1">
                <a href="/scrum/userstories/{{line.id}}" class="small" ng-click="vm.enableEditing(line)"><i class=" glyphicon glyphicon-list"></i></a>
            </div>
        </div>
        <hr class="row-compact" />
    </div>

</div>

<script>
    $(function () {
        var scope = angular.element($("#currentSprint")).scope();
        scope.$apply(function () {
            scope.vm.currentSprint = "@ViewBag.CurrentSprint";
            scope.vm.load();
        });
    });
</script>